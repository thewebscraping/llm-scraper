{
  "domain": "crypto.news",
  "lang": "en",
  "type": "article",
  "sitemap_url": "https://crypto.news/sitemap-news.xml",
  "rss_url": "https://crypto.news/feed",
  "cleanup": [
    "script",
    "style",
    "noscript",
    "iframe"
  ],
  "title": {
    "selector": [
      "h1.post-title",
      "h1"
    ]
  },
  "description": {
    "selector": [
      ".post-excerpt",
      ".entry-summary"
    ]
  },
  "content": {
    "selector": [
      ".post-content",
      ".entry-content",
      "article"
    ],
    "cleanup": [
      ".ads",
      ".advertisement",
      ".related-posts",
      ".newsletter",
      ".social-share",
      "[class*='sponsor']",
      "[class*='promoted']"
    ]
  },
  "authors": {
    "selector": [
      "//a[@rel='author']",
      ".author-name"
    ],
    "all": true
  },
  "date_published": {
    "selector": [
      "//time[@datetime]/@datetime",
      "//meta[@property='article:published_time']/@content",
      "time[datetime]",
      ".post-date"
    ],
    "attribute": "datetime"
  },
  "tags": {
    "selector": [
      "//a[@rel='tag']",
      ".post-tags a"
    ],
    "all": true
  }
}