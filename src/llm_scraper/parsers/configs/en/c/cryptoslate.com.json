{
  "domain": "cryptoslate.com",
  "lang": "en",
  "type": "article",
  "cleanup": [
    "script",
    "style",
    "noscript",
    "iframe"
  ],
  "title": {
    "selector": [
      "h1.single-post-title",
      "h1.entry-title",
      "h1"
    ]
  },
  "description": {
    "selector": [
      ".post-excerpt",
      ".entry-summary"
    ]
  },
  "content": {
    "selector": [
      "//article[@id='article']/div[3]",
      "//article[@id='article']/div[normalize-space(@class)='post']",
      "//article[@id='article']//div[@class='post ']",
      "//article[@id='article']",
      ".entry-content",
      "article"
    ],
    "cleanup": [
      ".ads",
      ".advertisement",
      ".ad-container",
      ".related-posts",
      ".newsletter-box",
      ".social-sharing",
      ".post-bottom",
      "a[href*='stake']",
      "a[href*='/stake_']",
      "[class*='sponsor']",
      "[class*='promoted']"
    ]
  },
  "authors": {
    "selector": [
      "//a[@rel='author']",
      ".author-name"
    ],
    "all": true
  },
  "date_published": {
    "selector": [
      "//time[@datetime]/@datetime",
      "//meta[@property='article:published_time']/@content",
      "time[datetime]",
      ".post-date"
    ],
    "attribute": "datetime"
  },
  "tags": {
    "selector": [
      "//a[@rel='tag']",
      ".post-tags a"
    ],
    "all": true
  }
}
