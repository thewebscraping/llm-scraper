{
  "domain": "theblock.co",
  "lang": "en",
  "type": "article",
  "title": {
    "selector": [
      "h1.article-title",
      "h1.post-title",
      "h1"
    ],
    "type": "text"
  },
  "description": {
    "selector": [
      ".article-excerpt",
      ".post-excerpt",
      "meta[name='description']"
    ],
    "type": "text"
  },
  "content": {
    "selector": [
      ".article-content",
      ".post-content",
      "article"
    ],
    "type": "html"
  },
  "authors": {
    "selector": [
      "//a[@rel='author']",
      ".author-name"
    ],
    "type": "text",
    "all": true
  },
  "date_published": {
    "selector": [
      "//time[@datetime]/@datetime",
      "//meta[@property='article:published_time']/@content",
      "time[datetime]"
    ],
    "type": "text",
    "attribute": "datetime"
  },
  "tags": {
    "selector": [
      "//a[@rel='tag']",
      "//a[contains(@href, '/tag/')]",
      ".post-tags a"
    ],
    "type": "text",
    "all": true
  },
  "cleanup": [
    ".ads",
    ".advertisement",
    ".related-posts",
    ".newsletter",
    ".social-share"
  ]
}